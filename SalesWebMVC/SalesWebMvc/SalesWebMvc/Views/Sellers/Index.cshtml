@model IEnumerable<SalesWebMvc.Models.Seller>


@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData<"Title"/h2>


<table class="table table-striped table-hover">
    <thead>
        <tr="success">

        </tr>
        <tr>
            @Html.DisplayNameFor(model => model.Name)
        </tr>
         <tr>
            @Html.DisplayNameFor(model => model.Email)
        </tr>
         <tr>
            @Html.DisplayNameFor(model => model.BirthDate)
        </tr>
         <tr>
            @Html.DisplayNameFor(model => model.BaseSalary)
        </tr>
    </thead> 
    <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem=>item.Name)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem=>item.Email)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem=>item.BirthDate)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem=>item.BaseSalary)
                    </td>
                    <td>
                        <a uiactions="Edit" id="@item.Id">Edit</a>
                        <a uiactions="Details" id="@item.Id">Details</a>
                        <a uiactions="Delete" id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>

